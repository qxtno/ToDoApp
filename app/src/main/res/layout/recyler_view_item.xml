<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:padding="10dp">

    <CheckBox
        android:id="@+id/completed_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_name"
        android:layout_alignBottom="@id/item_date"
        android:layout_marginEnd="8dp"
        android:minWidth="0dp"
        android:minHeight="0dp" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/circle_view"
        android:layout_alignBottom="@id/circle_view"
        android:layout_toStartOf="@id/item_category"
        android:layout_toEndOf="@id/completed_check_box"
        android:ellipsize="end"
        android:gravity="center|start"
        android:maxLines="1"
        android:textColor="@color/font_color"
        android:textSize="20sp"
        tools:text="Nazwa" />

    <TextView
        android:id="@+id/item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_name"
        android:layout_toEndOf="@id/completed_check_box"
        tools:text="Data" />

    <View
        android:id="@+id/circle_view"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/circle_view"
        android:layout_alignBottom="@id/circle_view"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@id/circle_view"
        android:gravity="center"
        android:textColor="@color/font_color"
        android:textSize="16sp"
        tools:text="Kategoria" />


</RelativeLayout>

